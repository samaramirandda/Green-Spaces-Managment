<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pprog.ui.gui.AddEntryAgendaGUI"
            prefHeight="400" prefWidth="600">

    <center>
        <VBox spacing="10" alignment="center" style="-fx-padding: 0 50;">
            <Label text="Add a Entry in the Agenda" style="-fx-font-size: 20px;" />
            <TextField fx:id="dateField" promptText="Enter the task start date" />
            <TextField fx:id="taskField" promptText="Enter the number corresponding to the task in the To-Do List" />
            <HBox spacing="10" alignment="center">
                <Button text="Return" onAction="#handleReturnButtonAction" />
                <Button text="Consult the To-Do List" onAction="#handleConsultGreenSpacesButtonAction" />
                <Button text="Submit" onAction="#handleSubmitButtonAction" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
